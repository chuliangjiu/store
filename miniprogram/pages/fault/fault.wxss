/* pages/fault/fault.wxss */
.container{
  width: 750rpx;
  padding: 25rpx;
}
.input-wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.center-text{
  font-size: 14px;
}
.date-input{
  width: 260rpx;
  border-radius: 10rpx;
  font-size: 12px;
  border:1px rgb(196, 192, 192) solid;
}
.error-wrapper{
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.item-wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border:1px rgb(240, 238, 238) solid;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.img-wrapper{
  width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right:1px rgb(240, 238, 238) solid;
}
.error-img{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
}
.error-text{
  display: inline-block;
  font-size: 12px;
  color: red;
  font-weight: bold;
}
.text-wrapper{
  width: 73%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.up-info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.error-car-number,.error-time,.error-level,.error-address,.error-custom{
  font-size: 12px;
}
.error-car-number{
  font-weight: bold;
}
.error-level{
  color: red;
  font-weight: bold;
}
.page-wrapper{
  width: 100%;
  padding: 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.page-img{
  width: 80rpx;
  height: 80rpx;
}
